        padding: 14px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-align: center;
    }

    .btn-outline {
        border: 2px solid var(--primary);
        background: white;
        color: var(--primary);
    }

        .btn-outline:hover {
            background: var(--neutral-lighter);
        }

    .btn-primary {
        background: var(--primary);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background: var(--primary-light);
        }

    .premium-features {
