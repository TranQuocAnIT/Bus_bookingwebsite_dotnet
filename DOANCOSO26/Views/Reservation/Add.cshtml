    }

    .route-list {
        list-style-type: none;
        padding: 0;
    }

        .route-list li {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .route-list span.badge {
            margin-right: 10px;
        }

        .route-list i {
            margin: 0 5px;
        }

    .service-details, .premium-features {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        margin: 16px 0;
        background-color: #f9f9f9;
    }

    .service-title, .premium-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 12px;
        color: #333;
        display: flex;
        align-items: center;
    }

        .service-title i, .premium-title i {
            margin-right: 8px;
            color: #ff9800;
        }

    .service-list, .premium-list {
        list-style: none;
        padding-left: 0;
    }

        .service-list li, .premium-list li {
            margin-bottom: 8px;
        }

        .service-list ul {
            margin: 8px 0 0 16px;
            list-style-type: disc;
        }

</style>

