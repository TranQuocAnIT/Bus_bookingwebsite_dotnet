    <script>
        $(document).ready(function () {
            // Lắng nghe sự kiện nhập liệu trong ô tìm kiếm
            $('#searchInput').on('input', function () {
                var query = $(this).val().toLowerCase();  // Lấy giá trị nhập vào và chuyển thành chữ thường

                // Duyệt qua tất cả các kết quả tìm kiếm
                $('#searchResults .search-result-item').each(function () {
                    var itemData = $(this).data();  // Lấy tất cả các thuộc tính 'data-' của phần tử

                    var matchFound = false;  // Biến kiểm tra có tìm thấy sự khớp hay không

                    // Duyệt qua tất cả các thuộc tính trong itemData
                    $.each(itemData, function (key, value) {
                        if (value.toLowerCase().includes(query)) {
                            matchFound = true;  // Nếu tìm thấy khớp, set flag là true
                            return false;  // Thoát khỏi vòng lặp ngay khi tìm thấy
                        }
                    });

                    // Nếu tìm thấy sự khớp, hiển thị kết quả, ngược lại ẩn nó
                    if (matchFound) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>

