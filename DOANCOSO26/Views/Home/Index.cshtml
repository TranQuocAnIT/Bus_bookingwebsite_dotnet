                                suggestionItem.textContent = location.display_name;
                                suggestionItem.onclick = function () {
                                    selectSuggestion(location);
                                };
                                suggestionsContainer.appendChild(suggestionItem);
                            });
                            suggestionsContainer.style.display = 'block';
                        } else {
                            suggestionsContainer.style.display = 'none';
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching suggestions:', error);
                    });
            } else {
                document.getElementById('suggestions').style.display = 'none';
            }
        }

        function selectSuggestion(location) {
            var searchInput = document.getElementById('searchInput');
            searchInput.value = location.display_name;

            var latitude = parseFloat(location.lat);
            var longitude = parseFloat(location.lon);
            map.setView([latitude, longitude], 13);

            // Add a marker at the selected location
            L.marker([latitude, longitude]).addTo(map);

            document.getElementById('suggestions').style.display = 'none';
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all promo boxes
            const promoBoxes = document.querySelectorAll('.promo__box');

            // Input element to store the selected company
            const companyInput = document.getElementById('company');

            // Track the last selected box to manage single selection
            let lastSelectedBox = null;

            promoBoxes.forEach(box => {
                box.addEventListener('click', function () {
                    // Get the company name from the link text
                    const companyName = this.querySelector('.link').textContent.trim();

                    // If a box was previously selected, remove its selected state
                    if (lastSelectedBox && lastSelectedBox !== this) {
                        lastSelectedBox.style.backgroundColor = '';
                        lastSelectedBox.style.border = '0.5px solid #6c757d';
                    }

                    // Update the input value with the selected company
                    companyInput.value = companyName;

                    // Highlight the selected box
                    this.style.backgroundColor = '#e6f2ff';  // Light blue highlight
                    this.style.border = '0.5px solid #475EC8';

                    // Update the last selected box
                    lastSelectedBox = this;
                });
            });
        });
    </script>
